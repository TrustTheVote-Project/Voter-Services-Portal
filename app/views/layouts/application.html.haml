!!!
%html
  %head
    %title= raw t('title')
    = stylesheet_link_tag "application", :media => "all"
    = custom_css_link_tag 'application_css'
    = csrf_meta_tags
    = include_gon

  %body{ id: @page_id }
    .container
      .content
        = render :partial => 'layouts/header'
        = render :partial => 'layouts/alerts_and_notices'
        = yield
        .external-page
          = ExternalPages.get_by_name :footer

    = javascript_include_tag  "application"
