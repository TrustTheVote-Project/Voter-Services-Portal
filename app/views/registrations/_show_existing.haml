- reg = RegistrationDetailsPresenter.new(@registration)
= render partial: "search/steps", locals: { step: 'view' }

.row
  .padded_page_span.section
    = render partial: 'head', locals: { name: reg.full_name }

    .span10.summary
      .head
        %p
          %strong Registration Status: #{reg.registration_status}
        %p Next Election Date: June 12, 2012

      .body
        %table.table.properties
          %tr
            %th Name:
            %td= reg.full_name
          %tr
            %th Date of birth:
            %td= reg.dob
          %tr
            %th Gender:
            %td= reg.gender
          %tr
            %th Social security number:
            %td= reg.ssn
          %tr
            %th Phone:
            %td= reg.phone
          %tr
            %th Email:
            %td= reg.email

        %table.table.properties
          %tr
            %th Registration address:
            %td= reg.registration_address
          %tr
            %th Mailing address:
            %td= reg.mailing_address

        %table.table.properties
          %tr
            %th Political party preference:
            %td= reg.party
          - if reg.address_confidentiality?
            %tr
              %th Address confidentiality:
              %td Active


      .form-actions
        = link_to "Update Information &rarr;".html_safe, :edit_registration, class: 'next btn'
