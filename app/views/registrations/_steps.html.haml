- complete ||= false
- updating ||= false
.row#steps
  - if eligibility_config['combine_with_identity']
    .span2{ class: complete ? nil : 'current', 'data-bind' => "attr: { 'class': stepClass(step(), 1) }" }
      %h2 Eligibility
  - else
    .span2{ class: complete ? nil : 'current', 'data-bind' => "attr: { 'class': stepClass(step(), 1) }" }
      %h2 Eligibility
    .span2{ 'data-bind' => "attr: { 'class': stepClass(step(), 2) }" }
      %h2 Identity

  .span2{ 'data-bind' => "attr: { 'class': stepClass(step(), 3) }" }
    %h2 Addresses
  
  - if any_options?(updating) && !option_config['combine_with_confirmation']
    .span2{ 'data-bind' => "attr: { 'class': stepClass(step(), 4) }" }
      %h2 Optional Questions

  .span2{ class: complete ? 'current' : nil, 'data-bind' => "attr: { 'class': stepClass(step(), 5, 'span2 last') }" }
    %h2 Complete
