- updating ||= false
#oath.section{ 'data-bind' => 'vis: page() == "oath"' }
  = render partial: 'oath_details', locals: { f: f, updating: updating }

  .form-actions
    = button_tag 'Next', class: 'next bt', 'data-bind' => 'click: nextFromOath, css: { disabled: oathInvalid }'
    = button_tag 'Back', class: 'back bt', 'data-bind' => 'click: prevPage'
