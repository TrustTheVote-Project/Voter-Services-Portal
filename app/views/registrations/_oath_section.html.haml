- updating ||= false
#oath.section{ 'data-bind' => 'vis: page() == "oath"' }
  = render partial: 'oath_details', locals: { f: f, updating: updating }

  .form-actions
    = button_tag 'Next &rarr;'.html_safe, class: 'next btn', 'data-bind' => 'click: nextPage, css: { disabled: oathInvalid }'
    = button_tag '&larr; Back'.html_safe, class: 'back btn', 'data-bind' => 'click: prevPage'
