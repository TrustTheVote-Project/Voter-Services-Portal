#confirm.section{ 'data-bind' => 'vis: page() == "confirm"' }
  .head
    %h3 Confirm
    .description Please confirm that your information is accurate. If the information is not correct, please go back and correct it.

  .row
    .span10
      .head.light
        %h3 Voter Information
      .summary
        .body
          %table.table.properties
            %tr
              %th Name:
              %td{ 'data-bind' => 'text: summaryFullName' }
            %tr
              %th Date of birth:
              %td{ 'data-bind' => 'text: summaryDOB' }
            %tr
              %th Gender:
              %td{ 'data-bind' => 'text: gender' }
            <!-- ko if: ssn -->
            %tr
              %th Social security number:
              %td{ 'data-bind' => 'text: ssn' }
            <!-- /ko -->
            <!-- ko if: phone -->
            %tr
              %th Phone:
              %td{ 'data-bind' => 'text: phone' }
            <!-- /ko -->
            <!-- ko if: email -->
            %tr
              %th Email:
              %td{ 'data-bind' => 'text: email' }
            <!-- /ko -->

          %table.table.properties
            %tr
              %th Registration address:
              %td{ 'data-bind' => 'html: summaryRegistrationAddress' }
            %tr
              %th Mailing address:
              %td
                %span{ 'data-bind' => 'html: summaryMailingAddress' }
                <!-- ko if: overseas -->
                (used for absentee ballot and other voting correspondence)
                <!-- /ko -->

          %table.table.properties
            %tr{ 'data-bind' => 'if: summaryParty' }
              %th Political party preference:
              %td{ 'data-bind' => 'text: summaryParty' }
            %tr{ 'data-bind' => 'if: isConfidentialAddress' }
              %th Address confidentiality:
              %td Active

  = render partial: 'confirm_absentee_status'


  .form-actions
    = button_tag 'Next &rarr;'.html_safe, class: 'next btn', 'data-bind' => 'click: nextPage'
    = button_tag '&larr; Back'.html_safe, class: 'back btn', 'data-bind' => 'click: prevPage'
