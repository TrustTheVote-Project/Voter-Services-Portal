#identity.section{ 'data-bind' => 'vis: page() == "identity"' }
  .head
    %h3 Identity
    .description Identify who you are

  .row.personal-info
    .span3
      %label{ for: 'registration_first_name' }
        First name
        %span (optional)
      = f.text_field :first_name, autocomplete: ac, 'data-bind' => 'valueWithInit: firstName'
    .span3
      %label{ for: 'registration_middle_name' }
        Full middle
        %span (optional)
      = f.text_field :middle_name, autocomplete: ac, 'data-bind' => 'value: middleName'
    .span3
      %label{ for: 'registration_last_name' } Last name
      = f.text_field :last_name, autocomplete: ac, 'data-bind' => 'instantValidation: { accessor: "lastName" }'
    .span2
      %label{ for: 'registration_suffix' }
        Suffix
        %span (optional)
      = f.select :suffix, Dictionaries::NAME_SUFFIXES, { include_blank: true }, { autocomplete: ac, class: 'span1', 'data-bind' => 'value: suffix' }


  - if collecting? :registration, :gender
    .row
      .span12
        %label{ for: 'registration_gender' } Gender
        = f.select :gender, [ 'Male', 'Female' ], { include_blank: true }, { autocomplete: ac, class: 'span2', 'data-bind' => 'instantValidation: { accessor: "gender" }' }

  .row
    .span2.phone-field
      %label{ for: 'registration_phone' }
        Phone
        %span (optional)
      = f.text_field :phone, autocomplete: ac, placeholder: '(NNN) NNN-NNNN', 'data-bind' => 'instantValidation: { accessor: "phone", attribute: "validPhone" }', class: 'span2'
    .span3.email-field
      %label{ for: 'registration_email' }
        Email
        %span (optional)
      = f.text_field :email, autocomplete: ac, placeholder: 'john@smith.com', 'data-bind' => 'instantValidation: { accessor: "email", attribute: "validEmail" }'


  <!-- ko if: dmvMatch() -->
  .row
    .span10= I18n.t("dmv.match")
  <!-- /ko -->

  .form-actions
    = button_tag 'Next &rarr;'.html_safe, class: 'next btn', 'data-bind' => 'click: nextPage, css: { disabled: identityInvalid }'
    = button_tag '&larr; Back'.html_safe, class: 'back btn', 'data-bind' => 'click: eligibilityPage'
