.row
  .span3.address-field
    %span Address
    = f.text_field "#{prefix}_address", 'data-bind' => "value: #{prefix}Address"
    = f.text_field "#{prefix}_address_2", 'data-bind' => "value: #{prefix}Address2"

.row
  .span2
    %span City or Town
    = f.text_field "#{prefix}_city", 'data-bind' => "value: #{prefix}City", class: 'span2'
  .span2
    %span State or Province
    = f.text_field "#{prefix}_state", 'data-bind' => "value: #{prefix}State", class: 'span2'
  .span2
    %span Postal Code
    = f.text_field "#{prefix}_postal_code", class: 'span1', 'data-bind' => "value: #{prefix}PostalCode"
  .span2
    %span Country
    = f.text_field "#{prefix}_country", 'data-bind' => "value: #{prefix}Country", class: 'span2'
