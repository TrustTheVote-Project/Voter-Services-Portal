#identity.section{ 'data-bind' => 'visible: page() == "identity"' }
  .head
    %h3 Identity
    .description Identify who you are

  .row.personal-info
    .span3
      %span
        First name
        %label (optional)
      = f.text_field :first_name, { 'data-bind' => 'value: firstName' }
    .span3
      %span
        Full middle
        %label (optional)
      = f.text_field :middle_name, { 'data-bind' => 'value: middleName' }
    .span3
      %span Last name
      = f.text_field :last_name, { 'data-bind' => 'value: lastName' }
    .span2
      %span
        Suffix
        %label (optional)
      = f.select :suffix, [ 'Jr', 'Sr' ], { include_blank: true }, { class: 'span1', 'data-bind' => 'value: suffix' }

  .row
    .span12.date
      %label Date of birth
      = bound_date f, :dob

  - if collecting? :registration_request, :gender
    .row
      .span12
        %label Gender
        = f.select :gender, [ 'Male', 'Femaly' ], { include_blank: true }, { class: 'span2', 'data-bind' => 'value: gender' }

  .row
    .span12.security-number
      %label Social Security Number
      = f.text_field :ssn, placeholder: '123 45 6789', 'data-bind' => 'value: ssn'
      .checkbox
        = f.check_box :no_ssn
        %label
          I do not have a Social Security Number.
          %br/
          To register without a Social Security Number you will have to contact your
          %br/
          countyâ€™s local
          %a{ :href => "#" }Voter Registration office.
          Find out more
          %a{ :href => "#" }here.

  .row
    .span3.phone-field
      %span
        Phone
        %label (optional)
      = f.text_field :phone, placeholder: '(NNN) NNN-NNNN', 'data-bind' => 'value: phone'
    .span3.email-field
      %span
        Email
        %label (optional)
      %span= f.text_field :email, placeholder: 'john@smith.com', 'data-bind' => 'value: email'

  .form-actions
    = button_tag '&larr; Back'.html_safe, class: 'back btn', 'data-bind' => 'click: prevPage'
    = button_tag 'Next &rarr;'.html_safe, class: 'next btn', 'data-bind' => 'click: nextPage'
