@font-face {
  font-family: 'Georgia';
  font-weight: normal;
  font-style: normal;
  src: url('<%= Rails.root %>/lib/fonts/georgia.ttf') format('truetype');
}

@font-face {
  font-family: 'UniversCo';
  font-weight: bold;
  font-style:  normal;
  src: url('<%= Rails.root %>/lib/fonts/UniversLTStd-BoldCn.otf') format('opentype');
}

@font-face {
  font-family: 'UniversCo';
  font-weight: normal;
  font-style:  normal;
  src: url('<%= Rails.root %>/lib/fonts/univers-condensed.ttf') format('truetype');
}

body {
  font-family: Helvetica, Arial, sans-serif;
  font-size: 10pt;
}

#header {
  background: #ddd;
  padding: 10px 10px;
  overflow: hidden;

  h1, h2 {
    font-family: Georgia;
    font-weight: normal;
    font-size: 22pt;
    margin: 0;
    padding: 0;
  }

  h1 { color: #000; }
  h2 { color: #888; }

  .overseas {
    float: right;
    color: #888;
    margin-top: -15px;
  }
}

.section {
  margin-top: 5px;
  padding-top: 15px;
  page-break-inside: avoid;

  .border {
    padding: 15px 10px 10px;
    border: 1px solid #ddd;
    overflow: hidden;
  }

  h1 {
    position: absolute;
    display: inline-block;
    color: #888;
    background: #fff;
    font-family: Georgia;
    font-size: 11pt;
    font-weight: normal;
    margin-top: -25px;
    padding: 0 5px;
  }

  .row {
    clear: both;
    width: 702px;
    overflow: hidden;
    margin-bottom: 8px;
    &:last-child {
      margin-bottom: 0;
    }
  }

  .span1, .span2, .span3, .span4, .span6 {
    margin-right: -4px;
    display: inline-block;
  }
  .span1 { width: 117px; }
  .span2 { width: 234px; }
  .span3 { width: 351px; }
  .span4 { width: 468px; }
  .span6 { width: 702px; }
}

.check {
  padding-left: 16px;
  background: url(<%= asset_data_uri 'checkbox.png' %>) 0 0 no-repeat;
}

.line {
  .optional {
    height: '1ex';
  }

  .value {
    padding-right: 10px;
  }

  label {
    border-top: 1px solid #666;
    margin-top: 3px;
    padding-top: 3px;
    display: block;
    font-size: 8pt;
    color: #666;
  }

  .value {
    word-wrap: break-word;
  }
}

.check.oath {
  font-size: 8pt;
}

.sign-block {
  background: #aaa;
  padding: 5px;

  h2 {
    margin: 0 0 0 10px;
    color: #000;
    font-size: 10pt;
  }

  .row.field {
    width: auto;
    background: #fff;
    margin-top: 5px;
    padding: 10px;
    overflow: hidden;

    .span4 {
      display: block;
      float: left;
    }
  }
}

$colWidth:  135px;
$red:       #d11242;

.page_break {
  page-break-before: always;
}

.title_page {
  font-family: UniversCo;
  font-weight: normal;
  font-size: 14px;
  line-height: 15px;
  overflow: hidden;
  page-break-after: always;

  & > header {
    border-bottom: 4px solid $red;
    padding-right: 70px;
  }

  h1 {
    color: $red;
    font-size: 3.5em;
    line-height: 1.1em;
    margin: 0 0 5px;
    span {
      font-weight: normal;
      display: block;
    }
  }
  p {
    &.warning {
      text-transform: uppercase;
      font-weight: bold;
    }
    &.first {
      border-top: 1px solid $red;
      margin-top: 1px;
      padding-top: 9px;
    }
  }
  p, ul {
    margin-top: 8px;
    margin-bottom: 8px;
  }
  article {
    font-size: 1.15em;
    line-height: 1.1em;
    border-bottom: 1px solid #000;
    header {
      display: block;
      float: left;
      width: $colWidth;
      h2 {
        font-weight: normal;
        color: $red;
        font-size: 1.2em;
        margin: 0 15px 0 0;
        padding: 0;
      }
    }
    p {
      margin-left: $colWidth + 10px;
    }
    ul {
      margin-left: $colWidth + 10px;
      padding-left: 20px;
    }
    &.last {
      border-bottom: 2px solid $red;
    }
  }
  .registrar {
    margin: 9px 0 7px 5px;
    font-weight: bold;
  }
  .serial {
    float: right;
    color: #aaa;
    font-size: 0.8em;
  }
}
