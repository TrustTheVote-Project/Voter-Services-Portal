body {
  font-family: Helvetica, Arial, sans-serif;
  font-size: 9pt;
}

.logo { 
  width: 85px;
  height: 79px;
  float: left;
  margin-right: 10px;
  background: url(<%= asset_data_uri 'voter_card_logo.png' %>) 0 0 no-repeat;
}

table.main {
  width: 100%;
  margin-bottom: 10pt;
}

table.details {
  margin-top: 5pt;
  .date {
    padding-left: 0px;
    padding-right: 10px;
  }
}

.registration {
  clear: left;
  padding-top: 10pt;
  text-transform: uppercase;
}

.voting_location {
  h3 {
    font-size: 9pt;
    margin: 0;
  }

  p {
    margin-top: 2pt;
    padding-left: 10px;
  }
}

.voter_office {
  h3 {
    margin: 0;
  }

  p {
    margin-top: 2pt;
    padding-left: 10px;
  }
}

td {
  vertical-align: top;
}

h1 {
  margin: 0;
  font-size: 11pt;
  text-transform: uppercase;
  text-align: center;
}

h2 {
  margin: 0;
  font-size: 10pt;
  text-transform: uppercase;
  text-align: center;
}

.fold {
  width: 10px;
  text-transform: uppercase;
  vertical-align: middle;
  border-right: 1px solid black;
  padding-right: 5px;
}

.middle, .right {
  padding-left: 10px;
}

.note {
  text-transform: uppercase;
  text-align: right;
}

.footer {
  .mailing_address {
    padding-left: 80pt;
    text-transform: uppercase;
  }
}

