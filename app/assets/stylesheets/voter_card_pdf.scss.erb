@font-face {
  font-family: Inconsolata;
  font-weight: normal;
  font-style: normal;
  src: url('<%= Rails.root %>/lib/fonts/Inconsolata.otf') format('opentype');
}

body {
  font-family: Helvetica, Arial, sans-serif;
  font-size: 8pt;
}

.logo { 
  width: 65px;
  height: 61px;
  float: left;
  margin-right: 6px;
  background: url(<%= asset_data_uri 'voter_card_logo.png' %>) 0 0 no-repeat;
}

table.main {
  width: 100%;
  margin-bottom: 10pt;
}

table.details {
  margin-top: 5pt;

  .idd, .date {
    font-size: 8pt;
    vertical-align: middle;
  }

  .label {
    font-size: 7pt;
  }

  .date.label {
    text-align: center;
    padding-left: 30px;
    padding-right: 10px;
  }
}

.registration {
  clear: left;
  padding-top: 10pt;
  text-transform: uppercase;
}

.voting_location {
  h3 {
    font-size: 9pt;
    margin: 0;
  }

  p {
    margin-top: 2pt;
    padding-left: 10px;
  }
}

.voter_office {
  h3 {
    margin: 0;
  }

  p {
    margin-top: 2pt;
    padding-left: 10px;
  }
}

td {
  vertical-align: top;
}

h1 {
  margin: 0;
  font-size: 10pt;
  text-transform: uppercase;
  text-align: center;
}

h2 {
  margin: 0;
  font-size: 8pt;
  text-transform: uppercase;
  text-align: center;
}

.fold {
  width: 10px;
  font-size: 7pt;
  text-transform: uppercase;
  vertical-align: middle;
  border-right: 1px solid black;
}

.middle, .right {
  padding-left: 10px;
}

.middle {
  width: 210pt;
}

.right {
  width: 180pt;
}

.note {
  text-transform: uppercase;
  text-align: right;
}

.footer {
  .mailing_address {
    padding-left: 80pt;
    text-transform: uppercase;
  }
}

.id {
  margin-top: -8px;
  font-family: Inconsolata;
  font-size: 165%;

  span {
    padding-right: 1px;
  }
}

table.districts {
  margin: 10pt 0;

  td {
    padding: 5pt 0 0;
  }
}
